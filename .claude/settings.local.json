{
  "permissions": {
    "allow": [
      "Bash(gh pr list:*)"
    ],
    "deny": []
  },
  "quality_fixer_hooks": {
    "post_approval": {
      "enabled": false,
      "auto_merge": false,
      "require_review": true
    }
  },
  "development_process": {
    "enforce_workflow": true,
    "required_stages": [
      "implementation",
      "testing", 
      "commit",
      "pr_creation",
      "code_review",
      "pr_discussion",
      "approval",
      "merge"
    ],
    "parallel_development": {
      "enabled": true,
      "max_concurrent_tasks": 3,
      "agent_roles": {
        "frontend_lead": "frontend-executor",
        "backend_lead": "backend-executor",
        "integration_lead": "task-executor",
        "qa_lead": "quality-fixer", 
        "review_lead": "document-reviewer",
        "design_lead": "technical-designer",
        "decomposition_lead": "task-decomposer"
      }
    },
    "pr_review_process": {
      "mandatory_review": true,
      "review_agent": "document-reviewer",
      "approval_agent": "document-reviewer", 
      "discussion_required": true,
      "auto_merge_disabled": true,
      "review_checklist": [
        "Code quality and standards",
        "Test coverage and reliability", 
        "Documentation completeness",
        "Security considerations",
        "Performance impact",
        "Integration compatibility"
      ]
    }
  }
}